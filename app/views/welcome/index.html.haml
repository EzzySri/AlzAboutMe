-if current_user
  %div.center-block
    - if can? :create, MemoryCard
      %h3= "Welcome to the Admin Dashboard #{current_user.first_name}"
      %h4= "Create new Questions Here"
      = form_tag memory_cards_path do
        .form-group
          = label :memcard, :question_type
          - question_types.each do |type|
            %br
            = radio_button :memcard, "question_type", type
            = label "question_type", type
            %br
        .form-group
          = label :memcard, :question, 'Question: '
          = text_field :memcard, 'question', {:type => "text", :class => "form-control", :id => "question", :placeholder => "Write a new question"}
          -if :question_type == "multiple_choice"
            .form-group
            = label :memcard, :question, 'Question: '
            = text_field :memcard, 'question', {:type => "text", :class => "form-control", :id => "question", :placeholder => "Write a new question"}
        .form-group
          = label :memcard, :category, 'Category: '
          - categories.each do |choice|
            %br
            = radio_button :memcard, "category", choice
            = label "category", choice
            %br
        = submit_tag 'Create New MemoryCard', {:id => "createMemoryCardButton"}
        - if flash[:notice]
          = flash[:notice]
        

- else 
  %div
    %h1#welcome_header Welcome to AlzAboutMe
     
