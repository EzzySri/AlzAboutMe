-# homefeed.html.haml using partial

%link{:rel => :stylesheet, :href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", :integrity => "sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", :crossorigin => "anonymous"}

-if current_user
  %h1= "Welcome #{current_user.first_name} #{current_user.last_name}"
  = form_tag users_homefeed_path, :method => :get do
    .form-group
    = label :memory, :field, 'Answer: '
    - if session[:recorded_memory] != nil
      = text_field :user, 'memory', :value => session[:recorded_memory], :type => "text", :class => "form-control", :id => "memoryfield", :placeholder => "Answer here"
    -else
      = text_field :user, 'memory', :type => "text", :class => "form-control", :id => "memoryfield", :placeholder => "Answer here"
    = submit_tag 'Update Memory', {:id => "updateMemoryButton"}
    - if flash[:notice]
      = flash[:notice]
-else 
  %h1 Welcome to AlzAboutMe
     
   
    
