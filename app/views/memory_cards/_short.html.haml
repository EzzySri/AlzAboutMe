-if memcard.editing == false
    = link_to "/memory_cards/" + memcard.id.to_s + "/edit", {:remote => true, :method => :put} do
        .frontCard{:id => "short_answer_card"}
            %h1= memcard.question
            -if memcard.answer.nil? == false
                %h3= memcard.answer

-if memcard.editing == true
    .backCard
        %h1= memcard.question
        = form_tag "/memory_cards/"+ memcard.id.to_s , {:method => :put, :remote => true} do
            .form-group
                = label :memory, :field, 'Answer: '
                - if memcard.answer.nil? == false
                    = text_field :user, 'memory', :value => memcard.answer, :type => "text", :class => "form-control", :id => "memoryfield", :placeholder => "Answer here"
                -else
                    = text_field :user, 'memory', :value => memcard.answer, :type => "text", :class => "form-control", :id => "memoryfield", :placeholder => "Answer here"
            = submit_tag 'Update Memory', {:id => "updateMemoryButton"}
        = button_to "Share", "/memory_cards/" + memcard.id.to_s + "/viewShareOptions", {:remote => true, :method => :put, :id => "shareButton"}
        -if session[:viewShare] == true
            .shareOptions
                -if @groups.nil? == false
                    = form_tag "/memory_cards/"+ memcard.id.to_s + "/shareGroup" , {:method => :put, :remote => true} do
                        -@groups.each do |group|
                            // %input{:type=>"checkbox", :name=>"#{group.group_name}", :value=>1, :checked=>1}
                            = check_box(:sharedGr, "#{group.group_name}")
                            =group.group_name
                        = submit_tag 'Share with Groups', {:id => "shareGroupButton"}
                    = button_to "hide", "/memory_cards/" + memcard.id.to_s + "/hideShareOptions", {:remote => true, :method => :put } 
                    
        = button_to "View Previous Answers", "/memory_cards/" + memcard.id.to_s + "/viewPrevious", {:remote => true, :method => :put, :id => "prevAnswersButton"}
        -if session[:prevView] == true
            .previousAnswers
                // %h1= memcard.previous_answers
                -answers = memcard.previous_answers.split("||")
                -answers.each do |answer|
                    %li= answer
                = button_to "hide", "/memory_cards/" + memcard.id.to_s + "/hidePrevious", {:remote => true, :method => :put } 
        = button_to "Cancel", "/memory_cards/" + memcard.id.to_s + "/exit", {:remote => true, :method => :put } 
            
            


