<!DOCTYPE html>
<html>
<head>
  <title>AlzAboutMe</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  Signed in as <%= current_user.username %> | <%= link_to("Logout", '/logout', id: "logoutLink") %>
<% else %>
  <%= link_to( 'Login', login_path, id: "loginLink") %> | <%= link_to('Signup', users_signup_path, id: "signUpButton") %>
<% end %>

<%= yield %>

</body>
</html>
