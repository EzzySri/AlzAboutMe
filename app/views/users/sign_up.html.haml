-# in app/views/users/sign_up.html.haml

%link{:rel => :stylesheet, :href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", :integrity => "sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", :crossorigin => "anonymous"}

.container-fluid
%h2 Sign Up with AlzAboutMe

= form_tag users_path do
  .form-group
    = label :user, :first_name, 'First Name: '
    = text_field :user, 'first name', {:type => "text", :class => "form-control", :id => "signUpEmail", :placeholder => "First"}
  .form-group
    = label :user, :last_name, 'Last Name: '
    = text_field :user, 'last name', {:type => "text", :class => "form-control", :id => "signUpEmail", :placeholder => "Last" }
  .form-group
    = label :user, :username, 'Username: '
    = text_field :user, 'username', {:type => "text", :class => "form-control", :id => "signUpEmail", :placeholder => "Username" }
  .form-group
    = label :user, :email, 'Email: '
    = text_field :user, 'email', {:type => "email", :class => "form-control", :id => "signUpEmail", :placeholder => "Email" }
  .form-group
    = label :user, :password, 'Password: '
    = password_field :user, 'password', {:type => "password", :class => "form-control", :id => "signUpPassword", :placeholder => "Password" }
  .form-group
    = label :user, :password_confirmation, 'Confirm Password'
    = password_field :user, 'password_confirmation', {:type => "password", :class => "form-control", :id => "signUpPasswordConfirmation", :placeholder => "Password" }

  .btn 
    = submit_tag 'Sign Up'
