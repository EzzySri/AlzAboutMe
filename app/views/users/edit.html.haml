  //   -if @change == 'password'
  //     = label :user, :password, 'Old Password: '
  //   -else
  //     = label :user, :password, 'Password: '
  //   = text_field :user, 'password', {:type => "password", :class => "form-control", :id => "password", :placeholder => "Password"}
